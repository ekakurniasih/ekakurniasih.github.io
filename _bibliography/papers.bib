   issue = {3},
   journal = {HAYATI Journal of Biosciences},
   keywords = {Bottleneck,DNA barcoding,Haplotype diversity,Nucleotide diversity},
   month = {5},
   pages = {567-575},
   publisher = {Bogor Agricultural University},
   title = {COI Gene Analysis of Asian Horseshoe Crab in Banyuasin Estuarine Waters, Sumatra, Indonesia},

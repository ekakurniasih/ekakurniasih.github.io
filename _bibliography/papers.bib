   issn = {22967745},
   issue = {MAY},
   journal = {Frontiers in Marine Science},
   keywords = {Carcinoscorpius,Climate change,Conservation,Ecological niche modeling,Marine protected area,Tachypleus,Xiphosura},
   month = {5},
   publisher = {Frontiers Media S. A},
   title = {Present and potential future distributions of Asian horseshoe crabs determine areas for conservation},
   volume = {5},
   year = {2018}
}

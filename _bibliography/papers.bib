   journal = {Journal of Crustacean Biology},
   month = {11},
   pages = {695-702},
   title = {Nests placements and spawning in the endangered horseshoe crab Tachypleus tridentatus (Leach, 1819) (Merostomata: Xiphosurida: Limulidae) in Sabah, Malaysia},
